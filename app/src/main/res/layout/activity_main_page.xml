<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.prodscan.MainPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="506dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp">

        <Button
            android:id="@+id/button_acquisitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="fill_horizontal|center"
            android:text="Lista Acquisizioni"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/acqButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="204dp"
            android:gravity="fill_horizontal"
            android:text="INIZIA ACQUISIZIONE"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/button_acquisitions"
            app:layout_constraintHorizontal_bias="0.5" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
